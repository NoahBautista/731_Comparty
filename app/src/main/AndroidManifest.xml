<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.compartyapp">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.gyroscope"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CompartyApp">
        <activity android:name=".PartsWebView"></activity>
        <activity android:name=".PartsView" />
        <activity android:name=".CasesWebView" />
        <activity
            android:name=".ViewCases"
            android:parentActivityName=".CasesView" />
        <activity android:name=".PowerSupplyWebView" />
        <activity
            android:name=".ViewPowerSupply"
            android:parentActivityName=".PowerSupplyView" />
        <activity android:name=".MotherboardWebView" />
        <activity
            android:name=".ViewMotherboard"
            android:parentActivityName=".MotherboardView" />
        <activity android:name=".RAMWebView" />
        <activity
            android:name=".ViewRAM"
            android:parentActivityName=".RamView" />
        <activity android:name=".GPUWebView" />
        <activity android:name=".CPUWebView" />
        <activity
            android:name=".ViewGPU"
            android:parentActivityName=".GPUView" />
        <activity
            android:name=".ViewCPU"
            android:parentActivityName=".CPUView" />
        <activity
            android:name=".AddPowerSupply"
            android:parentActivityName=".PowerSupplyView" />
        <activity
            android:name=".AddCases"
            android:parentActivityName=".CasesView" />
        <activity
            android:name=".AddMotherboard"
            android:parentActivityName=".MotherboardView" />
        <activity
            android:name=".AddRAM"
            android:parentActivityName=".RamView" />
        <activity
            android:name=".AddGPU"
            android:parentActivityName=".GPUView" />
        <activity
            android:name=".AddCPU"
            android:parentActivityName=".CPUView" />
        <activity
            android:name=".PowerSupplyView"
            android:launchMode="singleTop" />
        <activity
            android:name=".CasesView"
            android:launchMode="singleTop" />
        <activity
            android:name=".MotherboardView"
            android:launchMode="singleTop" />
        <activity
            android:name=".RamView"
            android:launchMode="singleTop" />
        <activity
            android:name=".GPUView"
            android:launchMode="singleTop" />
        <activity
            android:name=".CPUView"
            android:launchMode="singleTop" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CompartyApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>